<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.duan.story.dao.CategoryDao">

    <select id="listCategoryByIds" resultType="com.duan.story.entity.Category">
        SELECT * FROM category c WHERE c.id IN
        <foreach collection="ids"
                 item="item"
                 open="("
                 separator=","
                 close=")">
            #{item}
        </foreach>
    </select>

    <select id="listCategoryByWriterId" resultType="com.duan.story.entity.Category">
        SELECT *
        FROM category
        WHERE writer_id = #{writerId}
    </select>

    <select id="findCategoryById" resultType="com.duan.story.entity.Category">
        SELECT *
        FROM category
        WHERE id = #{value}
    </select>

    <select id="countByWriterId" resultType="java.lang.Integer">
        SELECT count(*)
        FROM category
        WHERE writer_id = #{value}
    </select>

    <select id="findIdByTitleAndWriterId" resultType="java.lang.Integer">
        select id
        from category
        where title = #{title}
          and writer_id = #{writerId}
    </select>

    <update id="update" parameterType="com.duan.story.entity.Category">
        UPDATE category
        <set>
            <if test="writerId != null">
                writer_id=#{writerId},
            </if>
            <if test="icon != null">
                icon=#{icon},
            </if>
            <if test="title != null">
                title=#{title},
            </if>
            <if test="bewrite != null">
                bewrite=#{bewrite},
            </if>
            <if test="createDate != null">
                create_date=#{createDate}
            </if>
        </set>

        <where>
            id=#{id}
        </where>

    </update>

    <delete id="delete">
        DELETE
        FROM category
        WHERE id = #{id}
    </delete>

    <insert id="insert" parameterType="com.duan.story.entity.Category" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO category (writer_id, icon, title, bewrite, create_date)
        VALUE (#{writerId}, #{icon}, #{title}, #{bewrite}, NOW())
    </insert>

</mapper>