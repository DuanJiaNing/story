<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.duan.story.dao.AccountDao">

    <select id="findAccountByUsername" resultType="com.duan.story.entity.Account">
        SELECT a.id, a.username, a.register_date, a.password
        FROM account a
        WHERE a.username = #{username}
    </select>

    <select id="findAccountById" resultType="com.duan.story.entity.Account">
        SELECT a.id, a.username, a.register_date, a.password
        FROM account a
        WHERE a.id = #{id}
    </select>

    <update id="update" parameterType="com.duan.story.entity.Account">
        UPDATE account
        <set>
            <if test="username != null">
                username=#{username},
            </if>
            <if test="password != null">
                password=#{password},
            </if>
            <if test="registerDate != null">
                registerDate=#{registerDate},
            </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>

    <insert id="insert" parameterType="com.duan.story.entity.Account" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO account (username, password, register_date)
        VALUE (#{username}, #{password}, NOW())
    </insert>

    <delete id="delete">
        DELETE
        FROM account
        WHERE id = #{value}
    </delete>

    <select id="ListAccount" resultType="com.duan.story.entity.Account">
        select *
        from account
    </select>

</mapper>