<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.duan.story.dao.LinkDao">

    <update id="update" parameterType="com.duan.story.entity.Link">
        UPDATE link
        <set>
            <if test="writerId != null">
                writer_id=#{writerId},
            </if>
            <if test="iconId != null">
                icon_id=#{iconId},
            </if>
            <if test="title != null">
                title=#{title},
            </if>
            <if test="url != null">
                url=#{url},
            </if>
            <if test="bewrite != null">
                bewrite=#{bewrite}
            </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>

    <delete id="delete">
        DELETE
        FROM link
        WHERE id = #{value}
    </delete>

    <select id="listLinkByWriterId" resultType="com.duan.story.entity.Link">
        SELECT *
        FROM link
        WHERE writer_id = #{writerId}
    </select>

    <select id="findLinkById" resultType="java.lang.Integer">
        SELECT *
        FROM link
        WHERE id = #{value}
    </select>

    <select id="countLinkByWriterId" resultType="java.lang.Integer">
        SELECT count(*)
        FROM link
        WHERE writer_id = #{value}
    </select>

    <insert id="insert" parameterType="com.duan.story.entity.Link" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO link (writer_id, icon_id, title, url, bewrite)
        VALUE (#{writerId}, #{iconId}, #{title}, #{url}, #{bewrite})
    </insert>

</mapper>