<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.duan.story.dao.ProfileDao">

    <select id="findProfileByWriterId" resultType="com.duan.story.entity.Profile">
        SELECT *
        FROM profile
        WHERE writer_id = #{value}
    </select>

    <select id="findProfileByPhone" resultType="com.duan.story.entity.Profile">
        SELECT *
        FROM profile
        WHERE phone = #{value}
    </select>

    <update id="update" parameterType="com.duan.story.entity.Profile">
        UPDATE profile
        <set>
            <if test="phone != null">
                phone=#{phone},
            </if>
            <if test="email != null">
                email=#{email},
            </if>
            <if test="avatar != null">
                avatar=#{avatar},
            </if>
            <if test="aboutMe != null">
                about_me=#{aboutMe},
            </if>
            <if test="intro != null">
                intro=#{intro}
            </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>

    <delete id="delete">
        DELETE
        FROM profile
        WHERE writer_id = #{value}
    </delete>

    <insert id="insert" parameterType="com.duan.story.entity.Profile" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO profile (writer_id, avatar, phone, email, about_me, intro)
        VALUE (#{writerId}, #{avatar}, #{phone}, #{email}, #{aboutMe}, #{intro})
    </insert>

</mapper>