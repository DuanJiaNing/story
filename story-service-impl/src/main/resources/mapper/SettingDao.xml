<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.duan.story.dao.SettingDao">

    <update id="update" parameterType="com.duan.story.entity.Setting">
        UPDATE setting
        <set>
            <if test="writerId != null">
                writer_id=#{writerId},
            </if>
        </set>
        <where>
            id=#{id}
        </where>
    </update>

    <delete id="delete">
        DELETE
        FROM setting
        WHERE id = #{value}
    </delete>

    <select id="findSettingByWriterId" resultType="com.duan.story.entity.Setting">
        SELECT *
        FROM setting
        WHERE writer_id = #{value}
    </select>

    <insert id="insert" parameterType="com.duan.story.entity.Setting" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO setting (writer_id)
        VALUE (#{writerId})
    </insert>

</mapper>